<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <androidx.cardview.widget.CardView
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="390dp"
        android:layout_height="200dp"
        android:id="@+id/cardView1" 
        android:layout_marginTop="20dp"
        android:elevation="20dp"
        android:padding="10dp"
        android:backgroundTint="@color/colorPrimaryDark">
    
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/gus"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gusion Bag"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginLeft="170dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="150php"
            android:textColor="#c1fe01"
            android:textSize="15dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="27dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bag with Gusion from Mobile Legends design. Specially made for average Gusion fans."
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="45dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="13 left"
            android:textColor="#cae8ef"
            android:textSize="15dp"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="150dp"
            android:textStyle="bold"/>

        <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/edit"
            android:scaleType="fitXY"
            android:id="@+id/edit1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="350dp"
            android:background="@android:color/transparent"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
